{
  "name": "nestjs-arktype",
  "version": "1.2.0",
  "description": "Define your NestJS DTOs and Swagger schemas using Arktype",
  "keywords": ["typescript", "nestjs", "swagger", "openapi", "dto", "schema", "validation"],
  "files": ["dist"],
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "prepublishOnly": "npm run ci",
    "build": "tsup",
    "test": "vitest --watch=true",
    "ci": "npm run build && npm run lint:ci && npm run check-exports",
    "lint:ci": "biome ci . --changed --error-on-warnings --no-errors-on-unmatched",
    "lint": "biome lint",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "tsc": "tsc",
    "local-release": "changeset version && changeset publish"
  },
  "author": "https://github.com/nicotsx",
  "license": "MIT",
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.3",
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.27.11",
    "@nestjs/core": "^11.1.0",
    "@nestjs/platform-express": "^11.1.0",
    "@nestjs/testing": "^11.1.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.3",
    "arktype": "^2.1.20",
    "reflect-metadata": "^0.2.2",
    "supertest": "^7.1.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "unplugin-swc": "^1.5.2",
    "vite": "^6.3.5",
    "vitest": "^3.0.2"
  },
  "peerDependencies": {
    "@nestjs/common": ">=11",
    "@nestjs/swagger": ">=11",
    "arktype": ">=2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nicotsx/nestjs-arktype.git"
  }
}
